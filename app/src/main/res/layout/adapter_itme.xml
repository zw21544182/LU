<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/itmeheight"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#458B74" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/itmeheight"
        android:orientation="horizontal"
        android:padding="8dp">

        <RelativeLayout
            android:layout_width="@dimen/itmeimagewidth"
            android:layout_height="@dimen/itmeimageheight">

            <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/itmeimagewidth"
                android:layout_height="@dimen/itmeheight"
                android:scaleType="centerCrop" />

            <CheckBox
                android:id="@+id/chose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/martop" />

            <ImageView
                android:id="@+id/button"
                android:layout_width="@dimen/buttonheight"
                android:layout_height="@dimen/buttonheight"
                android:layout_centerInParent="true"
                android:src="@drawable/play" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/itmeheight"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvFileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/marleft"
                    android:textColor="#707070" />

                <ImageButton
                    android:id="@+id/ibRename"
                    android:layout_width="@dimen/versintextsize"
                    android:layout_height="@dimen/versintextsize"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="@dimen/martop"
                    android:background="@drawable/rename" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/martop"
                android:textColor="#CDC5BF"
                android:textSize="@dimen/itmetimesize" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal">


                    <ImageButton
                        android:id="@+id/ibShare"
                        android:layout_width="@dimen/marbottom"
                        android:layout_height="@dimen/marbottom"
                        android:layout_marginLeft="@dimen/mar"
                        android:layout_marginRight="@dimen/martop"
                        android:background="@drawable/share" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/last"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#458B74"
        android:visibility="invisible" />

</LinearLayout>